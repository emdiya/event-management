<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Define log directory property -->
    <property name="LOG_DIR" value="logs" />
    
    <!-- Console appender with color -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %X{traceId:-} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Application Log - All application logs -->
    <appender name="APPLICATION_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/applicationlog.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/applicationlog-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %X{traceId:-} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Application Login - Authentication and login logs -->
    <appender name="APPLICATION_LOGGIN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/applicationloggin.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/applicationloggin-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %X{traceId:-} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Application Logger - Success and error logs -->
    <appender name="APPLICATION_LOGGER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/applicationlogger.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/applicationlogger-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %X{traceId:-} - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>
    
    <!-- Application loggers -->
    <logger name="com.kd.eventmanagement" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APPLICATION_LOG"/>
        <appender-ref ref="APPLICATION_LOGGER"/>
    </logger>
    
    <!-- Authentication/Login logs -->
    <logger name="com.kd.eventmanagement.backend.service.impl.AuthServiceImpl" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APPLICATION_LOGGIN"/>
        <appender-ref ref="APPLICATION_LOGGER"/>
    </logger>
    
    <!-- Spring framework -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="DEBUG"/>
    <logger name="org.springframework.security" level="DEBUG">
        <appender-ref ref="APPLICATION_LOGGIN"/>
    </logger>
    
    <!-- Hibernate -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APPLICATION_LOG"/>
        <appender-ref ref="APPLICATION_LOGGER"/>
    </root>
    
</configuration>
